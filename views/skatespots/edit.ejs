<% layout('layouts/boilerplate') %>
  <div class="row">
    <h1 class="text-center">Edit skatespot</h1>
    <div class="col-6 offset-3">
      <form action="/skatespots/<%=skatespot._id  %>?_method=PUT" method="POST" novalidate class="validated-form">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" id="title" name="skatespot[title]" value="<%=skatespot.title  %>"
            required>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a title</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" id="location" name="skatespot[location]"
            value="<%=skatespot.location  %>" required>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a location</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">skatespot Price</label>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="price-label">$</span>
            </div>
            <input id="price" type="text" class="form-control" placeholder="0.00" aria-label="price"
              aria-describedby="price-label" name="skatespot[price]" value="<%=skatespot.price  %>" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a price</div>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" type="text" id="description" name="skatespot[description]"
            required><%=skatespot.description  %></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a description</div>
        </div>
        <div class="mt-3 mb-5 custom-file">
          <label for="image" class="form-label">Choose Images</label>
          <input class="form-control" type="file" id="image" name="image" multiple>
          <label for="image" class="custom-file-label text-muted"></label>
        </div>
        <div class="mb-3">
          <% campground.images.forEach(function(img, i) { %>
            <img src="<%=img.url%>" class="img-thumbnail" alt="">
            <div class="form-check-inline">
              <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
            </div>
            <label for="image-<%=i%>">Delete?</label>
            <% })%>
        </div>
        <div class="mb-3">
          <button class="btn btn-info">Update skatespot</button>
        </div>
      </form>
      <a href="/skatespots/<%= skatespot._id %>">Back to Campground</a>
    </div>
  </div>